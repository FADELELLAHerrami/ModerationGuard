<div class="form-container">
  <%= simple_form_for @moderateds do |form| %>
    <div class="form-group">
      <%= form.label :text, "Texte", class: "form-label" %>
      <%= form.text_area :text, class: "form-input", rows: 5 %>
    </div>

    <div class="form-group">
      <%= form.label :language, "Langue", class: "form-label" %>
      <%= form.select :language, ['en-US', 'de-DE', 'fr-FR', 'es-ES'], {}, { class: "form-input" } %>
    </div>

    <div class="form-group">
      <%= form.button :submit, "Vérifier la modération", class: "submit-button" %>
    </div>
  <% end %>
</div>
